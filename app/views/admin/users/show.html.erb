<% provide :title, @user.name %>
<div class="row">
  <div class="col-md-3">
    <%= image_tag @user.image.url(:thumb), class: "img-thumbnail" %>
    <div class="well">
      <label><%= @user.name %></label>
      <hr>
      <label><%= @user.email %></label>
    </div>
  </div>
  <div class="col-md-9">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t ".activities" %></h3>
      </div>
      <div class="panel-body">
      </div>
    </div>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t ".my_favorites" %></h3>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <% @favourited_books.each do |book| %>
            <%= link_to book.title, admin_book_path(book),
              class: "list-group-item" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
