<div class="row">
  <h1 class="text-capitalize"><%= t ".page_tilte" %></h1>
  <br>
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
    </thead>
    <% @categories.each do |category|%>
      <tr>
        <td><%= link_to category.name, admin_category_path(category) %></td>
        <td><%= link_to t(".edit"), edit_admin_category_path(category), 
          class: "btn btn-success" %></td>
        <td>
          <%= link_to t(".delete"), admin_category_path(category), method: 
            :delete, class: "btn btn-danger", data: {confirm: t(".confirmation")} %>
        </td>
      </tr>
    <% end %>
  </table>
</div>